{% block title %}Mettez en ligne votre plat{% endblock %}

{% block css %} <link href="{{ asset('assets/css/soline.css') }}" rel="stylesheet"> {% endblock %}    

{% block main %}
<div class="container publication">
 
    <div class="row ">
        <div class="col-lg-12">
            <h1>Publiez votre plat</h1>
            <form method="POST" action="" >
                <div class="form-group">
                {# <label for="exampleFormControlInput1">Titre de votre plat</label> #}
                <input type="text" class="form-control" name="title" placeholder="Titre de votre plat" required>
                </div>

                <div class="form-group">
                    {# <label for="inputState">Sélectionnez votre type de plat</label> #}
                    <select name="category" class="form-control" required>
                        <option selected>Sélectionnez la catégorie de votre plat</option>
                        <option>#</option>
                        <option>#</option>
                        <option>#</option>
                    </select>
                </div>
                <div class="form-group">
                    {# <label for="inputState">Sélectionnez votre type de plat</label> #}
                    <select name="restriction" class="form-control">
                        <option selected>Restriction alimentaire (optionnel)</option>
                        <option>#</option>
                        <option>#</option>
                        <option>#</option>
                    </select>
                </div>

                <label for="appt">A venir récuperer chez vous entre:</label>
                <input type="time" id="appt" name="timeMin" min="01:00" max="00:00" required>
                <label for="appt">et:</label>
                <input type="time" id="appt" name="timeMax" min="01:00" max="00:00" required>


                <div class="form-group">
                    {# <label for="exampleFormControlTextarea1">Description de votre plat</label> #}
                    <textarea class="form-control" name="description" rows="5" placeholder="Description de votre plat" required></textarea>
                </div>

                <div class="row" id="price">
                    <div class="form-group col-lg-2">
                    {# <label for="exampleFormControlInput1">Prix</label> #}
                    <input type="text" class="form-control" name="price" placeholder="Prix">
                    </div>
                    <p class="form-group col-lg-10 euros">€</p>
                </div>

                <div class="form-group">
                    <label for="exampleFormControlFile1">Sélectionnez une image</label>
                    <input type="file" class="form-control-file" name="mealImage" required>
                </div>

                <div id="button">
                    <button type="submit" class="btn btn-primary">Validez votre publication</button>
                </div>
            </form>
        </div> 
    </div>
</div>
{% endblock %}