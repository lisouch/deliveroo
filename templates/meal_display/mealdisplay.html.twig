{% block title %}Food to you - Récupérez vite votre repas {% endblock %}

{% block css %}
<link href="{{ asset('assets/css/lisa.css') }}" rel="stylesheet">
{% endblock %} 

{% block main %}
<div id="post">
    <div class="title">Aperçu de votre annonce
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-6" id="postPresentation">
                <div class="titlePictureMeal">
                    <h2 style="font-weight:bold"> COUSCOUS DE CHARLOTTE </h2>
                    <div class="picture">
                        <img class="mealPicture" src="{{ asset('assets/img/couscous.jpg') }}" alt="couscous">
                    </div>
                </div>
            </div>
            <div class="col-lg-6" id="postDetails">
